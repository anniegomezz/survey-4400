<p style="color: green"><%= notice %></p>

<h1>Surveys</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th>Laptop</th>
      <th>OS</th>
      <th colspan="3"></th>
    </tr>
  </thead>

<div id="surveys">
  <% @surveys.each do |survey| %>
    <%= render survey %>
    <p>
      <%= link_to "Show this survey", survey %>
    </p>
  <% end %>
</div>
</table>


<%= link_to "New survey", new_survey_path %>
